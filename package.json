{
	"name": "form-cache-module",
	"version": "0.0.2",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"build:library": "ng build ng-form-cache && npm run copy:readme",
		"watch:library": "ng build ng-form-cache --watch",
		"start:app": "npm run build:library && ng serve ng-form-cache-sample",
		"build:app": "npm run build:library && ng build ng-form-cache-sample",
		"lint": "ng lint",
		"lint:fix": "ng lint --fix",
		"format:fix": "prettier --config ./.prettierrc --write \"**{.ts,.js,.json,.css,.scss,.html}\"",
		"format:check": "prettier --config ./.prettierrc --check \"**{.ts,.js,.json,.css,.scss,.html}\"",
		"prepare": "husky",
		"release": "commit-and-tag-version",
		"prerelease:alpha": "commit-and-tag-version --prerelease alpha",
		"prerelease:beta": "commit-and-tag-version --prerelease beta",
		"prerelease:rc": "commit-and-tag-version --prerelease rc",
		"copy:readme": "cp README.md dist/ng-form-cache/README.md"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "angular"
				}
			}
		]
	},
	"private": true,
	"dependencies": {
		"@angular/common": "^20.2.0",
		"@angular/compiler": "^20.2.0",
		"@angular/core": "^20.2.0",
		"@angular/forms": "^20.2.0",
		"@angular/platform-browser": "^20.2.0",
		"@angular/router": "^20.2.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^20.2.1",
		"@angular/cli": "^20.2.1",
		"@angular/compiler-cli": "^20.2.0",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/jasmine": "~5.1.0",
		"angular-eslint": "20.2.0",
		"commit-and-tag-version": "^12.6.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1",
		"husky": "^9.1.7",
		"jasmine-core": "~5.9.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"ng-packagr": "^20.2.0",
		"prettier": "^3.6.2",
		"typescript": "~5.9.2",
		"typescript-eslint": "8.40.0"
	},
	"lint-staged": {
		"**/*.{ts,js,json,css,scss,html}": [
			"eslint --fix",
			"prettier --config ./.prettierrc --write \"**{.ts,.js,.json,.css,.scss,.html}\""
		]
	}
}
